COMPILED=mod_parrot.c mod_parrot_io.c mod_parrot_run.c
WINXED=mod_parrot.pbc

mod_parrot.so: $(COMPILED) $(WINXED)
	$(APXS) $(LIBS) $(INCLUDES) $(LDPATH) -c $(COMPILED)
	$(LIBTOOL) --mode=install cp mod_parrot.la $(PWD)/build

%.c: mod_parrot.h

%.pbc: %.pir
	parrot -o $@ $< 
	cp $@ build

%.pir: %.winxed
	winxed -c $<

clean:
	rm -rf .libs *.lo *.slo *.la *.o *.a *.pbc *.so


